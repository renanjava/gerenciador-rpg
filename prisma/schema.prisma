enum ClassesPersonagem {
  MAGO
  ARQUEIRO
  LADINO
  BARDO
  GUERREIRO
}

enum TipoItemMagico {
  ARMA
  ARMADURA
  AMULETO
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Personagem {
  id              String            @id @default(uuid())
  nome            String
  nomeAventureiro String
  classe          ClassesPersonagem
  level           Int
  ItensMagicos    ItensMagicos[]
  forca           Int
  defesa          Int
}

model ItensMagicos {
  id             String         @id @default(uuid())
  nome           String
  tipoItemMagico TipoItemMagico
  forca          Int
  defesa         Int
  personagemId   String
  personagem     Personagem     @relation(fields: [personagemId], references: [id])
}
